<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_photo"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <openeyes.dr.openeyes.widget.CustomTextView
            android:background="@color/colorBlacklight"
            android:id="@+id/video_time"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="03:16"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="20dp"
            android:id="@+id/avatar_author"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="50dp"
            />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/video_title"
                android:text="成都偶遇气质小姐姐"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/author_category"
                android:text="小浩浩是也  /  #旅行"
                android:textColor="@color/colorGraylight"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/share_iv"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search_share"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/view"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>