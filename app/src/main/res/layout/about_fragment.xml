<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/about_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apache"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="联系方式"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:padding="15dp"
            android:background="@drawable/email"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_email"
            android:textColor="@color/colorWhite"
            android:text="邮箱"
            android:textSize="16sp"/>
    </RelativeLayout>


    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/colorAniBtn"
        android:text="darryrzhong.dev@gmail.com"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/iv_github"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/github"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_github"
            android:text="Github"
            android:textSize="16sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/github"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorAniBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="https://github.com/darryrzhong"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/iv_blog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="#E6F3FF"
            android:src="@drawable/contact_blog"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_blog"
            android:text="博客"
            android:textSize="16sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/blog"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorAniBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="www.darryrzhong.site"
        android:textSize="16sp"/>
    <openeyes.dr.openeyes.widget.CustomTextView
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily appetizers for your eyes，Bon eyepetit"
        android:textColor="@color/colorWhite" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="㉧  2018  darryrzhong.site"
        android:id="@+id/textView"
         />
</LinearLayout>